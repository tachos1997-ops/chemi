{
  "name": "elemental-nexus",
  "version": "1.0.0",
  "description": "Cyber-fantasy neon alchemy puzzle built with Phaser 3 and Capacitor",
  "private": true,
  "scripts": {
    "clean": "rm -rf dist www/*",
    "dev": "webpack serve --config webpack.config.js --mode development",
    "build": "npm run clean && webpack --config webpack.config.js --mode production && node scripts/postbuild.js",
    "test": "jest",
    "lint": "eslint 'src/**/*.js'",
    "ios": "npm run build && npx cap copy ios && npx cap open ios",
    "android": "npm run build && npx cap copy android && npx cap open android"
  },
  "dependencies": {
    "@capacitor-community/sqlite": "5.5.1",
    "@capacitor/app": "5.0.6",
    "@capacitor/browser": "5.0.6",
    "@capacitor/core": "5.7.0",
    "@capacitor/haptics": "5.0.6",
    "@capacitor/keyboard": "5.0.6",
    "@capacitor/preferences": "5.0.6",
    "@capacitor/push-notifications": "5.0.6",
    "@capacitor/status-bar": "5.0.6",
    "@capacitor-community/admob": "5.1.0",
    "@robingenz/capacitor-iap": "5.0.0",
    "phaser": "3.60.0",
    "rxjs": "7.8.1"
  },
  "devDependencies": {
    "@babel/core": "7.23.9",
    "@babel/preset-env": "7.23.9",
    "babel-jest": "29.7.0",
    "babel-loader": "9.1.3",
    "core-js": "3.34.0",
    "css-loader": "6.10.0",
    "eslint": "8.56.0",
    "eslint-plugin-import": "2.29.1",
    "html-webpack-plugin": "5.5.3",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "style-loader": "3.3.4",
    "terser-webpack-plugin": "5.3.9",
    "webpack": "5.89.0",
    "webpack-cli": "5.1.4",
    "webpack-dev-server": "4.15.1",
    "copy-webpack-plugin": "11.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "moduleNameMapper": {
      "\\.(css)$": "<rootDir>/test/__mocks__/styleMock.js"
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "browsers": [
              "last 2 versions",
              ">1%",
              "not dead"
            ],
            "ios": "12",
            "android": "8"
          },
          "useBuiltIns": "usage",
          "corejs": 3
        }
      ]
    ]
  }
}
